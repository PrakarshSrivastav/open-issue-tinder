generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Repo {
  id        Int      @id @default(autoincrement())
  githubId  BigInt   @unique
  name      String
  fullName  String   @unique
  htmlUrl   String
  language  String?
  stars     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  issues    Issue[]
}

model Issue {
  id              Int      @id @default(autoincrement())
  githubId        BigInt   @unique
  repoId          Int
  number          Int
  title           String
  htmlUrl         String
  state           String
  comments        Int      @default(0)
  labels          String[]
  language        String?
  repoStars       Int      @default(0)
  githubCreatedAt DateTime
  githubUpdatedAt DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  author          String
  authorAvatarUrl String
  authorUrl       String
  repo            Repo     @relation(fields: [repoId], references: [id])

  @@index([language])
  @@index([repoStars])
}
