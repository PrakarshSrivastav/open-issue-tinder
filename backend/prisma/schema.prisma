generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Repo {
  id        Int      @id @default(autoincrement())
  githubId  BigInt   @unique
  name      String
  fullName  String   @unique
  htmlUrl   String
  language  String?
  stars     Int      @default(0)

  issues    Issue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Issue {
  id              Int      @id @default(autoincrement())
  githubId        BigInt   @unique

  repoId          Int
  repo            Repo     @relation(fields: [repoId], references: [id])

  number          Int
  title           String

  author          String
  authorUrl       String
  authorAvatarUrl String

  htmlUrl         String
  state           String
  comments        Int      @default(0)

  labels          String[] // Stored label names

  language        String?  // Lowercase repo language
  repoStars       Int      @default(0)

  githubCreatedAt DateTime
  githubUpdatedAt DateTime

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([language])
  @@index([repoStars])
}
